<%= simple_form_for @discussion do |d| %>
  <%= select_tag(:discussion_type, options_for_select([['Domande generali','Domande generali'],['Gruppi di studio', 'Gruppi di studio'],['Avvisi del prof', 'Avvisi del prof'],['Materiale didattico','Materiale didattico']]), :prompt => "Seleziona un tipo di discussione") %>
  <%= d.input :title, label: "Titolo"%>
  <%= d.input :description, label: "Descrizione" %>
  <%= d.button :submit %>
<% end %>
