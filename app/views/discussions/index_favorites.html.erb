<h2> Le mie discussioni preferite</h2>
<div>
	<% if (@discussions.values.length > 0) %>
		<% @discussions.each do |discussion| %>
			<div class="row discussion-box">
				<div class="col-lg-7 title-discussion">
					<a href="/discussions/<%= discussion['id']%>"><%= discussion['title']%></a>
				</div>
				<div class="col-lg-3 detail-discussion">
					Autore:
					<a href="/users/<%= discussion['user_id'] %>">
						<%= @users[discussion['id']] %>
					</a>
				</div>
				<div class="col-lg-2 detail-discussion">
					Commenti:
					<% if @comments_number[discussion['id']] != nil %>
						<%= @comments_number[discussion['id']] %>
					<% else %>
						0
					<% end %>
				</div>
			</div>
			<%  %>
		<% end %>
	<% else %>
	<h2> 
		Non ci sono discussioni.
	</h2>
<% end %>
</div>