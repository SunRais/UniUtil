<div class="container emp-profile">
	<div class="center">
	    <div class="col-md-6 col-md-offset-3">
	    	<center><h2>Le tue Lezioni</h2></center>
			<li class="dropdown">
	    		<a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="false"> Materie <span class="caret"></span></a>
	        	<ul class="dropdown-menu" role="menu">
	        		<li> <%= link_to "Tutte le lezioni", lessons_path, class: "link" %></li>
	            	<% @subjects.each do |subject| %>
	            	<li class="<% 'active' if params[:subject] == subject.name %>">
	                	<%= link_to subject.name, lessons_path(subject: subject.name), class: "link" %>
	            	</li>
	            	<% end %>
	        	</ul>
			</li>
			<% if @mylessons.count == 0 %>
				<h4>Non ci sono lezioni previste.</h4>
			<% else %>
				<% @mylessons.each do |lesson| %>
					<div class="boxed">
						<%= lesson.date.strftime("%B %d, %Y") %>
						<br>Aula <%= lesson.classroom %>
						(<%= lesson.building %>)
						<br>Argomento: "<%= lesson.topic %>"<br>
						<a href="/lessons/<%= lesson.id %>">
							Dettagli
						</a>
						<%= link_to "Modifica", edit_lesson_path(lesson), class: "btn btn-custom" %>
						<%= link_to "Elimina", lesson_path(lesson), method: :delete, data: { confirm: "Confermi?" }, class: "btn btn-custom" %>
					</div>
				<% end %>
			<% end %>
			<%= link_to "Crea nuovo lezione", new_lesson_path %>
		</div>
	</div>
</div>

