<!DOCTYPE html>
<html>
  <head>
    <title>UniUtil</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
   
  </head>

  <body>
    <nav class="navbar navbar-default">
      <div class="container">
        <div class="navbar-header">
          <%= link_to "UniUtil", root_path, class: "navbar-brand" %>
        </div>
        <ul class="nav navbar-nav">
          <% if user_signed_in? %>
            <li><%= link_to "LogOut", destroy_user_session_path, method: :delete %></li>
          <% else %>
            <li><%= link_to "Registrati", new_user_registration_path %></li>
            <li><%= link_to "LogIn", new_user_session_path  %></li>
          <% end %>
        </ul>
        <ul class ="nav navbar-nav navbar-right">
          <li><%= link_to "Bacheca", root_path, class: "navbar-brand" %></li>
          <li><%= link_to "Corsi", subjects_path, class: "navbar-brand" %></li>
          <% if user_signed_in? %>
            <li><%= link_to "Area Personale", user_path(current_user.id), class: "navbar-brand" %></li>
          <% end %>
        </ul>
      </div>
    </nav>

    <p class="notice"><%= notice %></p>
    <p class="alert"><%= alert %></p>

    <div class="container">
      <%= yield %>
    </div>

  </body>
</html>