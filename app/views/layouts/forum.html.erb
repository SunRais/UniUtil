<!DOCTYPE html>
<html>
  <head>
    <title>UniUtil</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'discussions', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'discussions', 'data-turbolinks-track': 'reload' %>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
   
  </head>

  <body>
    <nav class="navbar navbar-default">
      <div class="container">
        <div class="navbar-header">
          <%= link_to "UniUtil", root_path, class: "navbar-brand" %>
        </div>
        <ul class ="nav navbar-nav navbar-right">
          <% if user_signed_in? %>
            <li><%= link_to "Area Personale", user_path(current_user.id), class: "navbar-brand" %></li>
          <% end %>
        </ul>
      </div>
    </nav>
    <p class="notice"><%= notice %></p>
    <p class="alert"><%= alert %></p>

    <div class="container">
      <%= yield %>
    </div>

  </body>
</html>
