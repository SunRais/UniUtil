<div>
	<% comments.each do |c| %>
		<div class="row comment"> 
			<div class="col">
				<div class="row">
					<div class="col-sm-2 comment-name">
						<%= c.user.name %>
						<%= c.user.surname %>
					</div>
					<div class="col-sm-10">
						<%= c.description %>
					</div>
				</div>
				<% if c.file.attached? %>
					<div class="row">
						<div class="col">
							<%= link_to 'Mostra file', c.file %>
							<%= link_to 'Download file', c.file, download: '' %>
						</div>
					</div>
				<% end %>
			</div>
		</div>
	<% end %>
</div>