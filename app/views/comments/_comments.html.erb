<div>
	<% comments.each do |c| %>
		<div class="row comment"> 
			<div class="col-sm-2 comment-name">
				<%= c.user.name %>
				<%= c.user.surname %>
			</div>
			<div class="col-sm-10">
				<div class="row">
					<div class="col">
						<%= c.description %>
					</div>
				</div>
				<% if c.file.attached? %>
					<div class="row attachment-row">
						<div class="col">
							<i class="fas fa-paperclip"></i>
							<%= link_to c.file.filename, c.file %>
							<div class="download-button">
								<%= link_to 'Download file', c.file, download: '' %>
							</div>
						</div>
					</div>
				<% end %>
			</div>
		</div>
	<% end %>
</div>