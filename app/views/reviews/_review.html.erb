<div class="review">
	<div class="review-rating" data-score="<%= review.rating %>"></div>
	<p class="review-comment"> <%= review.commento %></p>
	<% if user_signed_in? %>
		<% if review.user_id == current_user.id %> 
			<div class="links btn-group">
				<%= link_to "Modifica", edit_post_review_path(review.post, review), class: "btn btn-custom"%>
				<%= link_to "Cancella", post_review_path(review.post, review), method: :delete, data: { confirm: "Confermi?"}, class: "btn btn-custom" %> 
			</div>
		<% end %>
	<% end %>	
</div>
