<div class="col-md-6 col-md-offset-3">
	<div class="new-post-form">
		<h1> Modifica commento </h1>
		<%= simple_form_for([@post, @review]) do |f| %>
			<div id="rating-form">
				<label>Rating</label>
			</div>
			<%= f.input :commento %>
			<%= f.button :submit, :class => 'btn-custom2' %>
		<% end %>
	</div>
</div>

<script>
	$('#rating-form').raty({
		path: '/assets/',
		scoreName: 'review[rating]'
	});
</script>