<h2><%= @post.titolo %> </h2>
<h4> Categoria: <%= @post.category.nome %></h4>
<p><%= @post.contenuto %></p>

<%= link_to "Indietro", root_path%>

<% if user_signed_in? %>
	<% if @post.user_id == current_user.id %>
		<%= link_to "Modifica", edit_post_path(@post) %>
		<%= link_to "Elimina", post_path(@post), method: :delete, data: { confirm: "Confermi?" } %>
	<% end %>
<% end %>