<div class="center">
  <div class="col-md-6 col-md-offset-3">
    <div class="new-post-form">
      <center><h2>Modifica password</h2></center><br>
        <%= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
          <%= f.error_notification %>
          <%= f.input :reset_password_token, as: :hidden %>
          <%= f.full_error :reset_password_token %>
          <div class="form-inputs">
            <%= f.input :password, label: "Nuova password", required: true, autofocus: true, hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length) %>
            <%= f.input :password_confirmation, label: "Conferma nuova password", required: true %>
          </div>
          <div class="form-actions">
            <%= f.button :submit, "Cambia la mia password", class: "btn btn-info" %>
          </div>
        <% end %>
        <br><u><%= render "devise/shared/links" %></u>
    </div>
  </div>
</div>


