<div class="col-md-6 col-md-offset-3">
	<div class="signup-form">
		<h2>Registrazione</h2>
		<%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
		<%= f.error_notification %>
	    	<div class="form-inputs">
    			<%= f.input :email, required: true, autofocus: true %>
    			<%= f.input :password, required: true, hint: ("Minimo #{@minimum_password_length} caratteri" if @minimum_password_length) %>
    			<%= f.input :password_confirmation, required: true, label: "Conferma password" %>
    			<%= f.input :nome, required: true, label: "Nome" %>
    			<%= f.input :cognome, required: true, label: "Cognome" %>
    			<%= f.input :sesso, as: :radio_buttons, collection: [['F','Femmina'], ['M','Maschio']], label_method: :second, value_method: :first %>
    			<%= f.input :numero_matricola, required: true, label: "Numero di matricola" %>
    			<%= f.input :indirizzo, required: true,hint: ("es. Via Garibaldi 34"), label: "Indirizzo" %>
    			<%= f.input :citta, required: true, label: "CittÃ " %>
    			<%= f.input :numero_telefono, required: true, label: "Recapito telefonico" %>
 			</div>
  			<div class="form-actions">
	    		<%= f.button :submit, "Registrati", class: "btn-custom2" %>
  			</div>
		<% end %>
		<%= render "devise/shared/links" %>
	</div>
</div>
