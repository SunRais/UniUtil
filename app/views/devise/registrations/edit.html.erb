<div class="center">
  <div class="col-md-6 col-md-offset-3">
    <div class="signup-form">
      <center><h2>Modifica dati</h2></center><br>
      <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
        <%= f.error_notification %>
        <div class="form-inputs">
          <%= f.input :address, required: true, hint: ("es. Via Garibaldi 34"), label: "Indirizzo" %>
          <%= f.input :city, required: true, label: "CittÃ " %>
          <%= f.input :province, required: true, label: "Provincia" %>
          <%= f.input :telephone_number, required: true, label: "Recapito telefonico" %>
          <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
            <p>Currently waiting confirmation for: <%= resource.unconfirmed_email %></p>
          <% end %>

          <%= f.input :password, label: "Nuova password", autocomplete: "off", hint: "Lasciare il campo vuoto se non si desidera modificarla.", required: false %>
          <%= f.input :password_confirmation, label: "Conferma nuova password",required: false %>
          <%= f.input :current_password, label: "Attuale password", hint: "Abbiamo bisogno della tua attuale password per poter salvare le modifiche.", required: true %>
        </div>

        <div class="form-actions">
          <%= f.button :submit, "Aggiorna dati", class: "btn btn-info"%>
        </div>
      <% end %>
    </div>
  </div>
</div>

