<ul>
<% @notifications.each do |n| %>
	<li>
		<a href="/users/<%= n.actor.id %>"><b>
				<%= n.actor.name %>
				<%= n.actor.surname %>
		</b></a>
		<%= n.action %>
		<% if n.action == "posted a " %>
			<a href="/discussions/<%= n.notifiable.discussion.id %>"><b>
				<%= n.notifiable_type %>
			</b></a>
		<% else%>
			<a href="/subjects/<%= n.notifiable.subject.id %>"><b>
				<%= n.notifiable_type %>
			</b></a>
		<% end %>
		in data <%= n.created_at.strftime("%B %d, %Y") %>
		alle ore <%= n.created_at.strftime("%I:%M%p") %>
	</li>
<% end %>
</ul>