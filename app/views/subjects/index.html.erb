<h1 class="current-category"><%= params[:course] %></h1>
<% if @subjects.count == 0 %>
	<h4>Non ci sono corsi.</h4>
<% else %>
	<div class="row">
		<% @subjects.each do |subject| %>
			<div class="col-md-3">
				<h2><%= link_to subject.nome, subject_path(subject) %></h2>
			</div>
		<% end %>
	</div>
<% end %>

