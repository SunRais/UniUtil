<% if @subjects.count == 0 %>
  <h4>Non ci sono materie per questo corso di studio.</h4>
<% else %>
  <% @subjects.each do |subject| %>
    <div class="row course-list">
      <div class="col">
        <a href="/subjects/<%= subject.id %>">
          <b><%= subject.name %></b>
        </a>
      </div>
    </div>
  <% end %>
<% end %>